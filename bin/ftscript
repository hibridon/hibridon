#!/bin/csh -f 
# HIBRIDON bin/ftscript $Revision: 2000.2 $  
# ftscript machi [mach2] [mach3] [mach4]: to convert files for machine type {mach}
# convert all .f files to new machine, and then replaces original .f
# files with the converted files
@ items = $#argv

if ($items == 0) then
  echo "usage:  ftscript machi [mach2] [mach3] [mach4]"
  goto end
endif
if ($items > 4) then
  echo "usage:  ftscript machi [mach2] [mach3] [mach4]"
  goto end
endif
echo "../bin/ftconv.exe << fin" > control.file
echo $1 >> control.file
if ($items == 1) then
  set name = $1
endif
if ($items == 2) then
  set name = $1
  set name1 = $2
  echo $2 >> control.file
endif
if ($items == 3) then
  set name = $1
  set name1 = $2
  set name2 = $3
  echo $2 >> control.file
  echo $3 >> control.file
endif
if ($items == 4) then
  set name = $1
  set name1 = $2
  set name2 = $3
  set name3 = $4
  echo $2 >> control.file
  echo $3 >> control.file
  echo $4 >> control.file
endif
echo '' >> control.file
ls -1 hi*.f >>control.file
echo '' >> control.file
echo "fin" >> control.file
chmod +x control.file
control.file 
echo ""
echo "all hi*.f files converted, copying back ..."
rm control.file
set existfl = 1
ls -1 *.new > newlist
if (-z newlist) set existfl = 0
  while ($existfl != 0)
    set name = `head -1 newlist`
    mv $name $name:r.f
    sed 1,1d newlist > newcheck
    mv newcheck newlist
    if (-z newlist) set existfl = 0
  end
  rm newlist
end:
exit
