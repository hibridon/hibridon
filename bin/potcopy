#!/bin/csh -f
# HIBRIDON bin/potcopy $Revision: 96.2 $ --- copies all pot.f files contained in include.list

set basedir=`hibriddir`
cd $basedir
cd /scratch/mha/htar 
set htar=`pwd`
cd $basedir/src/pot
cp include.list newlist
set existfl = 1
if (-z newlist) set existfl = 0
  while ($existfl != 0)
    set name = `head -1 newlist`
    cp $name $htar/src/pot >>& $basedir/tar.log
    sed 1,1d newlist > newcheck
    mv newcheck newlist
    if (-z newlist) set existfl = 0
  end
  rm newlist
exit
