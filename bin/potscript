#!/bin/csh -f
# HIBRIDON bin/potscript $Revision: 2004.2 $ --- 
# converts pot_name.f file to new machine, and then replaces original .f
# file with the converted file

set basedir=`hibriddir`

@ items = $#argv


if ($items == 0) then
  echo "usage:  potscript machi [mach2] [mach3] [mach4]"
  goto end
endif
if ($items > 4) then
  echo "usage:  potscript machi [mach2] [mach3] [mach4]"
  goto end
endif
echo "ftconv_hib.exe << fin" > control.file
set name = $1
if ($items == 1) then
  echo $1 >> control.file
endif
if ($items == 2) then
  set name = $1
  set name1 = $2
  echo $2 >> control.file
endif
if ($items == 3) then
  set name = $1
  set name1 = $2
  set name2 = $3
  echo $2 >> control.file
  echo $3 >> control.file
endif
if ($items == 4) then
  set name = $1
  set name1 = $2
  set name2 = $3
  set name3 = $4
  echo $2 >> control.file
  echo $3 >> control.file
  echo $4 >> control.file
endif
echo '' >> control.file
ls -1 pot_$1.f >>control.file
echo '' >> control.file
echo "fin" >> control.file
chmod +x control.file
./control.file 
echo ""
echo "pot_$1.f file converted, copying back ..."
rm control.file
mv pot_$1.new pot_$1.f
end:
exit
